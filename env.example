# Environment Configuration for Workspace Tools
# Copy this file to .env and fill in your actual values

# Google Workspace Configuration
ADMIN_USER=admin@yourdomain.com
PRIMARY_DOMAIN=yourdomain.com
GOOGLE_APPLICATION_CREDENTIALS=./path/to/your/service-account-key.json

# Optional: Google Sheets Output
OUTPUT_SHEET_ID=your_output_sheet_id_here

# Cloud Run Server Configuration
NODE_ENV=development
PORT=8080

# Google Cloud Project (automatically read from service account JSON file)
# GOOGLE_CLOUD_PROJECT=your-gcp-project-id  # Optional override - usually not needed

# Caching Configuration
ENABLE_CACHING=true
CACHE_DATASET=workspace_cache
BATCH_SIZE=50
METADATA_TTL=3600
ANALYSIS_TTL=7200

# Redis Configuration (for local development)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# For Cloud Run deployment, use:
# REDIS_URL=redis://your-redis-host:6379

# Performance Tuning
MAX_RETRIES=3
CONCURRENT_USERS=5
FILES_PER_BATCH=25

# Logging
LOG_LEVEL=info
ENABLE_STREAMING_LOGS=true

# Feature Flags
ENABLE_LINK_ANALYSIS=true
ENABLE_SHARING_ANALYSIS=true
ENABLE_MIGRATION_ANALYSIS=true
ENABLE_LOCATION_ANALYSIS=true
ENABLE_CALENDAR_ANALYSIS=false
